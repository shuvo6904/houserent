<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/identityLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sheet_background">

    <TextView
        android:id="@+id/textViewBottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="Upload Front Side of Your Photo Identity."
        android:textColor="#E62667"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textViewBottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBottom1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Example: NID Card or Student ID Card"
        android:textColor="#E62667"
        android:textSize="20sp"
        android:textStyle="italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBottom2"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imageViewPhotoIdentity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_image_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/changePhotoIdentityImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageViewPhotoIdentity"
                android:layout_alignBottom="@id/imageViewPhotoIdentity"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_baseline_photo_camera_24"
                app:fabSize="mini" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>