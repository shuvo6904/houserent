<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
          android:background="#fece2f"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:padding="30dp">

            <ImageView
              android:id="@+id/editableProfileImageViewId"
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/ic_baseline_account_circle_24"
              android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/profileNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/editableProfileImageViewId"
                android:includeFontPadding="false"
                android:text="Shuvo Talukdar"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileEmailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileNameId"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/editableProfileImageViewId"
                android:includeFontPadding="false"
                android:text="example@gmail.com"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editableProfileImageViewId">

                <TextView
                    android:id="@+id/checkIsEmailVerifiedId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="Email Unverified"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/verifiedEmailButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/checkIsEmailVerifiedId"
                    android:padding="5dp"
                    android:text="Verify"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:background="#E6B923"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:id="@+id/editProfileButtonId"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="Edit"
                android:textStyle="bold" />


            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : Shuvo Talukdar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NID Number : 72387398"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number : 01792387398"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : example@gmail.com"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

  </ScrollView>